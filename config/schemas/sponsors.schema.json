{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "赞助商配置",
  "type": "object",
  "properties": {
    "sponsors": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-zA-Z0-9-_]+$",
            "description": "赞助商唯一标识符"
          },
          "name": {
            "type": "string",
            "minLength": 1,
            "description": "赞助商名称"
          },
          "logo": {
            "type": "string",
            "format": "uri",
            "description": "赞助商logo URL"
          },
          "description": {
            "type": "string",
            "minLength": 1,
            "description": "赞助商描述"
          },
          "website": {
            "type": "string",
            "format": "uri",
            "description": "赞助商网站URL"
          },
          "amount": {
            "type": "string",
            "description": "赞助金额（可选）"
          },
          "level": {
            "type": "string",
            "enum": ["diamond", "platinum", "gold", "silver"],
            "description": "赞助等级"
          }
        },
        "required": ["id", "name", "logo", "description", "website", "level"],
        "additionalProperties": false
      }
    }
  },
  "required": ["sponsors"],
  "additionalProperties": false
}